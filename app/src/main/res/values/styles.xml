<resources>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_launch</item>
    </style>

    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="MaterialDialogAppTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NumberPadButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/dialog_number_pad_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="iconTint">@android:color/black</item>
    </style>

    <style name="TabButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_dialog_mode</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogToolbarButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="DefaultButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_dialog_mode</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="FieldTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/field_text_size</item>
    </style>

    <style name="Subtitle1Text">
        <item name="android:textSize">@dimen/subtitle_1_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Subtitle2Text">
        <item name="android:textSize">@dimen/subtitle_2_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textSize">@dimen/subtitle_2_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MaterialAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
